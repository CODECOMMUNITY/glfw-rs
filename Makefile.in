VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=

RUST_SRC = \
	$(addprefix src/,\
		ffi.rs \
		callbacks.rs)

UNAME=$(shell uname)
ifeq ($(UNAME),Darwin)
LDFLAGS = -L ../glfw -lglfw -framework Cocoa -framework OpenGL -framework IOKit -framework CoreFoundation -framework QuartzCore
endif
ifeq ($(UNAME),Linux)
LDFLAGS = -L ../glfw -lglfw -lX11 -lXrandr -lXi -lXxf86vm -lGL
endif

.PHONY: all
all: libglfwrs.dummy

libglfwrs.dummy: src/lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) --link-args="$(LDFLAGS)" $< --out-dir . --lib
	touch $@

.PHONY: check
check:

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy *-test
